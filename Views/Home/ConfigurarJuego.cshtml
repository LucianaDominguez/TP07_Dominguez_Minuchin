@{
    ViewData["Title"] = "Configurar Juego";
}
<main class="config">
  <form method="get" action='@Url.Action("Comenzar")' class="form">
    <div class="form-group">
      <label>Dificultad:</label>
      <div class="wrapper1">
        <div class="option">
          <input class="input" type="radio" id="dificultad-todas" name="dificultad" value="-1" checked>
          <div class="btnForm">
            <span class="span">Todas</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="dificultad-1" name="dificultad" value="1">
          <div class="btnForm">
            <span class="span">1</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="dificultad-2" name="dificultad" value="2">
          <div class="btnForm">
            <span class="span">2</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="dificultad-3" name="dificultad" value="3">
          <div class="btnForm">
            <span class="span">3</span>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label>Categoría:</label>
      <div class="wrapper2">
        <div class="option">
          <input class="input" type="radio" id="categoria-todas" name="categoria" value="-1" checked>
          <div class="btnForm">
            <span class="span">Todas</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="categoria-ciencia" name="categoria" value="2">
          <div class="btnForm">
            <span class="span">Ciencia</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="categoria-historia" name="categoria" value="6">
          <div class="btnForm">
            <span class="span">Historia</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="categoria-geografia" name="categoria" value="5">
          <div class="btnForm">
            <span class="span">Geografía</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="categoria-entretenimiento" name="categoria" value="4">
          <div class="btnForm">
            <span class="span">Entretenimiento</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="categoria-arte" name="categoria" value="1">
          <div class="btnForm">
            <span class="span">Arte</span>
          </div>
        </div>
        <div class="option">
          <input class="input" type="radio" id="categoria-deporte" name="categoria" value="3">
          <div class="btnForm">
            <span class="span">Deporte</span>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="username">Nombre de Usuario:</label>
      <input type="text" placeholder="username" id="username" name="username" class="" required />
    </div>

    <button type="submit" class="btn botonIndex">Jugar</button>
  </form>
</main>
