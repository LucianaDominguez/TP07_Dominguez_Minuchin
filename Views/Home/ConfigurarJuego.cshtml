@{
    ViewData["Title"] = "Configurar Juego";
}
<main class = "config">
<form method="get" action='@Url.Action("Comenzar")' class="form">
    <div class="form-group">
        <label>Dificultad:</label>
        <div class="form-check">
            <input type="radio" id="dificultad-todas" name="dificultad" value="-1" class="form-check-input" required>
            <label for="dificultad-todas" class="form-check-label">Todas</label>
        </div>
        <div class="form-check">
            <input type="radio" id="dificultad-1" name="dificultad" value="1" class="form-check-input" required>
            <label for="dificultad-1" class="form-check-label">1</label>
        </div>
        <div class="form-check">
            <input type="radio" id="dificultad-2" name="dificultad" value="2" class="form-check-input" required>
            <label for="dificultad-2" class="form-check-label">2</label>
        </div>
        <div class="form-check">
            <input type="radio" id="dificultad-3" name="dificultad" value="3" class="form-check-input" required>
            <label for="dificultad-3" class="form-check-label">3</label>
        </div>
    </div>

    <div class="form-group">
        <label>Categoría:</label>
        <div class="form-check">
            <input type="radio" id="categoria-todas" name="categoria" value="-1" class="form-check-input" required>
            <label for="categoria-todas" class="form-check-label">Todas</label>
        </div>
        <div class="form-check">
            <input type="radio" id="categoria-ciencia" name="categoria" value="1" class="form-check-input" required>
            <label for="categoria-ciencia" class="form-check-label">Ciencia</label>
        </div>
        <div class="form-check">
            <input type="radio" id="categoria-historia" name="categoria" value="2" class="form-check-input" required>
            <label for="categoria-historia" class="form-check-label">Historia</label>
        </div>
        <div class="form-check">
            <input type="radio" id="categoria-geografia" name="categoria" value="3" class="form-check-input" required>
            <label for="categoria-geografia" class="form-check-label">Geografía</label>
        </div>
        <div class="form-check">
            <input type="radio" id="categoria-entretenimiento" name="categoria" value="4" class="form-check-input" required>
            <label for="categoria-entretenimiento" class="form-check-label">Entretenimiento</label>
        </div>
        <div class="form-check">
            <input type="radio" id="categoria-arte" name="categoria" value="5" class="form-check-input" required>
            <label for="categoria-arte" class="form-check-label">Arte</label>
        </div>
        <div class="form-check">
            <input type="radio" id="categoria-deporte" name="categoria" value="6" class="form-check-input" required>
            <label for="categoria-deporte" class="form-check-label">Deporte</label>
        </div>
    </div>

    <div class="form-group">
        <label for="username">Nombre de Usuario:</label>
        <input type="text" placeholder="username" id="username" name="username" class="input" required />
    </div>

    <button type="submit" class="btn btn-primary">Jugar</button>
</form>
</main>